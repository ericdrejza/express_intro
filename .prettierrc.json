{
  "semi": false,
  "tabWidth": 2,

  "overrides": [
    {
      "files": ["*.js"],
      "options": {
        "bracketSameLine": true,
        "bracketSpacing": true,
        "jsxSingleQuote": true,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.json"],
      "options": {}
    }
  ]
}
